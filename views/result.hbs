<div id="showOnMap" data-latitude={{searchresultdb.latitude}} data-longitude={{searchresultdb.longitude}}>
</div>

<style>
    #map {
        height: 150px;
        width: 100%;
        border-radius: 0px 0px 0px 15px;
        bottom: 0px;
        box-shadow: 0px -20px 20px -15px black;
    }
</style>


{{! ------------------------------------------ }}

<img src="{{searchresultdb.image}}" class="result-background"></img>

<section class="result-card">

    <div class="pix-n-map">
        <div style="background-image: url('{{searchresultdb.image}}')" class="pix-n-detail">
            <div class="speech">
                <h1>{{searchresultdb.name}}</h1>
                <p>{{searchresultdb.description}}</p>
                <h5>lat: {{searchresultdb.latitude}} | lng: {{searchresultdb.longitude}}</h5>
            </div>
        </div>
        <div id="map" class="result-map"></div>
    </div>

    </div>

    <div class="comment-n-post">
        <div class="comment-section">
            {{#each searchresultdb.comments}}
            <h5>{{this.username.username}}</h5>
            <p>{{this.content}}</p>
            {{/each}}
        </div>
        <a href="/result/add-comment/{{searchresultdb._id}}" class="comment-btn">+ add a comment</a>
    </div>

</section>