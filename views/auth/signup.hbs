<form id="form" action="/signup.hbs" method="POST">

    <label for="username">Username</label><br>
    <input type="text" name="username" placeholder="Your username" required="true">

    <label for="email">Email</label><br>
    <input type="email" name="email" placeholder="Your email" required="true">

    <label for="role">Role</label><br>
    <input type="text" name="role" value="user" placeholder="Your role" value="user" required="true">

    <label for="password">Password</label><br>
    <input type="password" name="password" placeholder="*********" required="true">
    {{#if errorMessage}}
    <div class="error-message">{{errorMessage}}</div>
    {{/if}}
</form>