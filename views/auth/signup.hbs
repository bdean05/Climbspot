<div class="sign-background2">
    <section class="formCard">


        {{#if error}}
        <p>{{error}}</p>
        {{/if}}
        <form class="sign-in-form2" action="/auth/signup" method="POST">
            <h2 class="sign-title">Sign up</h2>
            <div>
                {{!-- <label for="username">Username</label><br> --}}
                <input class="form-input1" type="text" name="username" placeholder="Your username" required="true"
                    value="toto">

            </div>

            <div>
                {{!-- <label for="password">Password</label><br> --}}
                <input class="form-input2" type="password" name="password" placeholder="*********" required="true"
                    value="1234">
            </div>
            <a class="sign-link" href="/auth/signup">Already have an account? ? Sign in !</a>
            {{#if errorMessage}}
            <div class="error-message">{{errorMessage}}</div>
            {{/if}}
        </form>
        <button class="sign-btn">Submit</button>



    </section>
</div>