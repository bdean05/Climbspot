<form class="form" action="/auth/signup" method="POST">

    <label for="username">Username</label><br>
    <input type="text" name="username" placeholder="Your username" required="true" value="toto">

    {{!-- <label for="email">Email</label><br>
    <input type="email" name="email" placeholder="Your email" required="true" value="toto@gmail.com"> --}}

    <label for="role">Role</label><br>
    <input type="text" name="role" placeholder="user" value="user" required="true">

    <label for="password">Password</label><br>
    <input type="password" name="password" placeholder="*********" required="true" value="1234">
    {{#if errorMessage}}
    <div class="error-message">{{errorMessage}}</div>
    {{/if}}
    <button class="btn">Submit</button>

    <p>Already have an account?<a href="/signin">Sign in</a></p>
</form>