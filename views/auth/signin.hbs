<form autocomplete="off" class="form" method="POST" action="/auth/signin">
    <h2 class="title">Signin</h2>

    {{#if error}}
    <p>{{error}}</p>
    {{/if}}

    <div class="form-group">
        <label class="label" for="username">Email</label>
        <input class="input" id="username" type="username" name="username" placeholder="Enter your username"
            required="true" value="toto">
    </div>
    <div>
        <label for="role">Role</label><br>
        <input type="text" name="role" placeholder="user" value="user" required="true">
    </div>
    <div class="form-group">
        <label class="label" for="password">Password</label>
        <input class="input" id="password" type="password" name="password" placeholder="********" required="true"
            value="1234">
    </div>
    <button class="btn">Submit</button>
    <p>Don't have an account yet ? <a class="link" href="/auth/signup">Signup</a> !</p>


</form>